@model BugTracker.Models.Tickets

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tickets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="Created" value="@DateTime.Now" class ="form-control" />
            </div>
            <div>
                <input type="hidden" asp-for="ProjectId" value="@ViewBag.projectId" class ="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TicketType" class="control-label"></label>
                <select asp-for="TicketTypeId" class ="form-control" asp-items="@ViewBag.TicketType"></select>
                <span asp-validation-for="TicketTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketPriority" class="control-label"></label>
                <select asp-for="TicketPriorityId" class ="form-control" asp-items="@ViewBag.TicketPriorities"></select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TicketStatusId" value="@ViewBag.Status" class ="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="OwnerUserId" value="@ViewBag.UserId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Project" asp-action="Details" asp-route-id="@ViewBag.projectId">Back to Project</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
