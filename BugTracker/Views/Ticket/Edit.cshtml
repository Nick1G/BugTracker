@model BugTracker.Models.Tickets

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tickets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
                <input type="hidden" aspfor ="oldTicket" value="@ViewBag.OldTicket" class ="form-control" />
            </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="Created" value="@ViewBag.Created" class ="form-control" />
            </div>
            <div>
                <input type="hidden" asp-for="Updated" value="@DateTime.Now" class ="form-control" />
            </div>
            <div>
                <input type="hidden" asp-for="OwnerUserId" value="@ViewBag.OwnerUserId" class ="form-control" />
            </div>
            <div>
                <input type="hidden" asp-for="AssignedToUserId" value="@ViewBag.AssignedUserId" class ="form-control" />
            </div>
             <div>
                <input type="hidden" asp-for="ProjectId" value="@ViewBag.ProjectId" class ="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TicketTypeId" class="control-label"></label>
                <select asp-for="TicketTypeId" class="form-control" asp-items="@ViewBag.TicketType"></select>
                <span asp-validation-for="TicketTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketPriorityId" class="control-label"></label>
                <select asp-for="TicketPriorityId" class="form-control" asp-items="@ViewBag.TicketPriorities"></select>
                <span asp-validation-for="TicketPriorityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatusId" class="control-label"></label>
                <select asp-for="TicketStatusId" class="form-control" asp-items="@ViewBag.TicketStatus"></select>
                <span asp-validation-for="TicketStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
